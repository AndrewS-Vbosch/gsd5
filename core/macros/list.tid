title: $:/plugins/gsd5/core/macro/gsd5-list
tags: $:/tags/Macro

\define gsd5-list(title:"Next Action",gsd_type:"action",gsd_status:"next",gsd_complete:"false",realmAware:"false",sort:"title",order"ascending",groupBy:"none",customFilter:"none")
<div class="tw-menu-list-item">
$title$
<hr/>
