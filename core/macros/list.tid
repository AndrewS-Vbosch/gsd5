			<div class="tc-menu-list-subitem">
				<$transclude tiddler="$:/plugins/gsd5/core/ui/lists/ListViewPrefix"/>
				<$link to={{!!title}}><$view field="title"/></$link>
				&nbsp;<$transclude tiddler="$:/plugins/gsd5/core/ui/lists/ListViewSuffix"/>
			</div>
		</$list>
		</div>
	</$list>
	<$list filter=<<list-composer gsd_type:$gsd_type$ gsd_status:$gsd_status$ gsd_complete:$gsd_complete$ realmAware:"false" sort:$sort$ order:$order$ groupBy:$groupBy$ groupTail:"false" groupTailHeader:"true" groupHeader:"false" internalFilter:"none" customFilter:$customFilter$>>>
